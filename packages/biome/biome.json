{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"include": ["../../apps/**/*.{js,ts,jsx,tsx}"],
		"ignore": [
			"node_modules",
			"dist",
			"build",
			"**/.next/**",
			"**/.wrangler/**",
			"**/.turbo/**",
			"**/.vercel/**"
		]
	}
}
